<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cook.talk.model.dao.AdRecipeDAO">

<resultMap type="" id="rcpDTO">
<collection property="scrap"> </collection>
<association property="user">
</association>
</resultMap>
	<select id="allSelectRecipe"
		resultType="com.cook.talk.model.dao.AdRecipeDAO">
		select * from rcp
	</select>
	
	<!-- adRecipe에서, 작성자 를 입력하였을때에, 등록한 레시피가 나오게끔 -->
		<select id="searchRecipeByNickName"
		resultType="com.cook.talk.model.dao.AdRecipeDAO">
		select * from rcp where userId like concat ('%',#{userId},'%');
	</select>
	
		<select id="selectStaticMonths">
		select count(*) from comment where cafe_code=#{cafe_code}
	</select>
	
		<select id="selectStaticsGender">
		select count(*) from comment where cafe_code=#{cafe_code}
	</select>
		
		<select id="selectStaticsAge">
		select count(*) from comment where cafe_code=#{cafe_code}
	</select>
</mapper>
	